<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_achievement"
            style="@style/ProfileItem">

            <TextView
                style="@style/ProfileItemTitle"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/profile_achievement"
                android:text="销售业绩" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="26dp"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/profile_password"
            style="@style/ProfileItem"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/ProfileItemTitle"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/profile_password"
                android:text="修改密码" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="26dp"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_carve_line_color" />

        <RelativeLayout
            android:id="@+id/profile_info"
            style="@style/ProfileItem">

            <TextView
                style="@style/ProfileItemTitle"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/profile_info"
                android:text="个人信息" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="26dp"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_feedback"
            style="@style/ProfileItem"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/ProfileItemTitle"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/profile_feedback"
                android:text="意见反馈" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="26dp"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_carve_line_color" />

        <RelativeLayout
            android:id="@+id/profile_contact"
            style="@style/ProfileItem">

            <TextView
                style="@style/ProfileItemTitle"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/profile_contact"
                android:text="联系我们" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="16dp"
                android:drawableRight="@mipmap/right_arrow"
                android:paddingRight="26dp"
                android:text="400-879-3366"
                android:textColor="@color/edit_hint_text_color"
                android:textSize="@dimen/text_size_mid" />
        </RelativeLayout>

        <Button
            android:id="@+id/profile_logout"
            style="@style/ButtonBackgroundSelector"
            android:onClick="onClickMethod"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="退出" />
    </LinearLayout>


</ScrollView>